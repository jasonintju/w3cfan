<% layout('back/layout') -%>

<ol class="breadcrumb">
  <li><a href="/admin">管理首页</a></li>
  <li><a href="/admin/category">分类首页</a></li>
  <li class="active">编辑分类</li>
</ol>

<h3>编辑分类 -- <%= category %></h3>

<form method="post" action="/admin/category/edit?id=<%= id %>" target="link-iframe">
  <div class="form-group">
    <label for="cate-name">分类名称：</label>
    <input type="text" value="<%= category %>" class="form-control" id="cate-name" name="name">
  </div>
  <button type="submit" class="btn btn-primary">提交</button>
</form>

<iframe name="link-iframe" style="display: none;"></iframe>
