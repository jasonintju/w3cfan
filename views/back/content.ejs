<% layout('back/layout') -%>

<ol class="breadcrumb">
  <li><a href="/admin">管理首页</a></li>
  <li class="active">内容列表</li>
</ol>

<h3>内容列表</h3>


<table class="table table-hover table-bordered table-striped">
  <tr>
    <th>ID</th>
    <th>分类名称</th>
    <th>标题</th>
    <th>作者</th>
    <th>添加时间</th>
    <th>阅读量</th>
    <th>操作</th>
  </tr>

  <% contents.forEach(function(content) { %>
  <tr>
    <td><%= content._id %></td>
    <td><%= content.category.name %></td>
    <td><%= content.title %></td>
    <td><%= content.user.username %></td>
    <td><%= content.addTime %></td>
    <td><%= content.PV %></td>
    <td>
      <a href="/admin/content/edit?id=<%= content._id %>">修改</a> |
      <a href="/admin/content/delete?id=<%= content._id %>">删除</a>
    </td>
  </tr>
  <% }) %>
</table>
